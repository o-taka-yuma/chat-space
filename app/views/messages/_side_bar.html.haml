    .top-items
      .top-items__name
        %a.name
          = current_user.name
      .top-items__icon
        = link_to new_group_path do
          = icon('far', 'edit', class: "icon--btn")
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: "edit--btn")
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group-name
            = group.name 
